<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: #111;
  }
  .page {
    color: black;
    background-color: red; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  .current {
    color: black;
    background-color: blue; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  .first {
    color: black;
    background-color: red; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  .prev {
    color: black;
    background-color: red; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  .next {
    color: black;
    background-color: red; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  .last {
    color: black;
    background-color: red; 
    border: none;
    padding: 4px 8px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
  @media (max-width: 800px) {
    .mobile-h-15 {
      height: 3rem;
    }
    .grid {
      grid-template-columns: repeat(2, 1fr); 
    }
  }
</style>
<main class="mr-20 ml-20 mt-8">
<%= paginate @contents %>
<div class="grid grid-cols-3 gap-4 mt-4">
  <% @contents.each do |content| %>
    <% if content.poster.present? %>
      <div class="relative group">
        <%= link_to showcontent_path(content.id), class: "block overflow-hidden border rounded-lg shadow-md group-hover:shadow-lg transition duration-300" do %>
          <div class="h-72 mobile-h-15">
            <img class="content-img object-cover w-full h-full" src="<%= url_for(content.poster) %>" />
          </div>
          <div class="absolute inset-0 flex justify-center items-center bg-gray-800 bg-opacity-0 group-hover:bg-opacity-75 transition duration-300 opacity-0 group-hover:opacity-100">
            <h3 class="text-white text-xl font-semibold uppercase text-center"><%= content.name %></h3>
          </div>
        <% end %>   
      </div>
    <% end %>
  <% end %>
</div>
</main>