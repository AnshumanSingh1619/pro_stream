        <ul class="py-2" aria-labelledby="user-menu-button">
          <% if admin_signed_in? %>
            <li>
              <%= button_to "Sign Out", destroy_admin_session_path, method: :delete, class:'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white' %>
            </li>
            <li>
              <%= link_to "Edit", edit_admin_registration_path, class:'block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white' %>
            </li>
          <% elsif user_signed_in? %>
            <li>
