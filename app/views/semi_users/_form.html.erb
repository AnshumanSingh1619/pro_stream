<% semi_user = SemiUser.new %>
<%= form_with(model: semi_user, local: false) do |form| %>
  <div class="modal-body">
    <div>
      <%= form.label :name, class: "block" %>
      <%= form.text_field :name, class: "inp" %>
    </div>
  
    <div class="form-group">
      <%= form.label :date_of_birth, class: "block" %><br>
      <%= form.date_field :date_of_birth, class: "form-control", max: 10.years.ago.to_date %>
    </div>
  
    <div>
      <%= form.label :profile_pic, class: "block" %>
      <%= form.file_field :profile_pic, accept: 'image/*' %>
    </div> 
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <%= form.submit  "Submit", class:"btn btn-success mt-1" %>
  </div>
<% end %>  