<%= form_with(model: semi_user, html: {class: "max-w-md mx-auto"}) do |form| %>
  <% if semi_user.errors.any? %>
    <div class="text-red-700">
      <h2><%= pluralize(semi_user.errors.count, "error") %> prohibited this semi_user from being saved:</h2>

      <ul>
        <% semi_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block font-medium" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>
  
  <div class="mb-4">
    <%= form.label :date_of_birth, class: "block font-medium" %><br>
    <%= form.date_field :date_of_birth, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50", max: 10.years.ago.to_date %>
  </div>
  
  <div class="mb-4">
    <%= form.label :profile_pic, class: "block font-medium" %>
    <%= form.file_field :profile_pic, accept: 'image/*', class: "mt-1 block w-full" %>
  </div> 
  
  <div>
    <%= form.submit "Submit", class: "bg-red-700 hover:bg-red-800 text-white font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none focus:ring-4 focus:ring-red-300" %>
  </div>
<% end %>
