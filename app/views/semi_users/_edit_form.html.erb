<%= form_with(model: semi_user, local: false) do |form| %>
  <div class="modal-body">
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "inp"%>
    </div>
    
    <div>
      <%= form.label :profile_pic, style: "display: block" %>
      <%= form.file_field :profile_pic, accept: 'image/*' %>
    </div> 
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= form.submit  "Submit", class: "btn btn-success mt-1" %>
  </div>
<% end %> 