<% semi_user = @semi_user %>
<h1 class="text-center text-2xl font-bold mb-4">Editing semi user</h1>
<%= form_with(model: semi_user, html: {class: "w-full max-w-md mx-auto"}) do |form| %>
  <% if semi_user.errors.any? %>
    <div class="text-red-700">
      <h2 class="mb-2"><%= pluralize(semi_user.errors.count, "error") %> prohibited this semi_user from being saved:</h2>

      <ul>
        <% semi_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
  </div>
  <div class="mb-4">
    <%= form.label :profile_pic, class: "block text-sm font-medium" %>
    <%= form.file_field :profile_pic, accept: 'image/*', class: "mt-1 block w-full" %>
  </div> 
  <div>
    <%= form.submit "Save", class: "bg-red-700 hover:bg-red-800 text-white font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none focus:ring-4 focus:ring-red-300" %>
  </div>
<% end %>
<br>
<div class="text-center">
  <%= link_to "Show this semi user", @semi_user, class: "inline-block text-red-700 border border-red-700 hover:bg-red-800 text-white font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none focus:ring-4 focus:ring-red-300 mx-2 mb-2" %> |
  <%= link_to "Back to semi users", semi_users_path, class: "inline-block text-red-700 border border-red-700 hover:bg-red-800 text-white font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none focus:ring-4 focus:ring-red-300 mx-2 mb-2" %>
</div>
