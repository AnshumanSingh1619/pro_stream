<div class="profile mt-8 ">
  <div class="dropdown inline-block relative">
    <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown<%= semi_user.id %>" class="icon1" type="button">
      <i class="fa fa-list" aria-hidden="true"></i>
    </button>
    <div id="dropdown<%= semi_user.id %>" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
      <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
        <li data-modal-target="edituserModal<%= semi_user.id %>" data-modal-toggle="edituserModal<%= semi_user.id %>" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" type="button">
          Edit User
        </li>
        <li>
          <%= button_to 'Delete', semi_user, method: :delete, class: 'block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' %>
        </li>
      </ul>
    </div>
  </div>  
  <div id="edituserModal<%= semi_user.id %>" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            Edit User
          </h3>
          <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="edituserModal<%= semi_user.id %>">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div id="edituserForm<%= semi_user.id %>">
          <%= render "edit_form", semi_user: semi_user %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to session_create_path(semi_user.id) do %>
    <% if semi_user.profile_pic.present? %>
      <img src="<%= url_for(semi_user.profile_pic) %>" style="width: 100%; height: 100%;" />
    <% else %>
      <img src="https://i.stack.imgur.com/l60Hf.png" style="width: 100%; height: 100%;" />  
    <% end %>
  <% end %>  
  <h2 class="text-red-500 text-center"><%= semi_user.name %></h2>
</div>