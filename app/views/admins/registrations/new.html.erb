<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: rgb(162, 143, 143);
  }
  a{
    color:red;
  }  
  .conta{
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }
</style>
<div class="w-full min-h-[100vh] pt-36">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="max-w-xl w-full mx-auto conta shadow-lg rounded-lg py-8">
  <h2 class="text-xl mb-4 text-center">Sign up</h2>
  <div class="w-3/4 mx-auto">
    <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"w-full rounded-lg bg-gray-50" %>
        <p>We'll never share your email with anyone else.</p>
      </div>
    
      <div class="field mt-2">
        <%= f.label :firstname %><br />
        <%= f.text_field :firstname, autofocus: true, class:"w-full rounded-lg bg-gray-50" %>
      </div>
    
      <div class="field mt-2">
        <%= f.label :lastname %><br />
        <%= f.text_field :lastname, autofocus: true, class:"w-full rounded-lg bg-gray-50" %>
      </div>
    
      <div class="field mt-2">
        <%= f.label :gender %><br />
        <%= f.select :gender, options_for_select(["Male", "Female", "Others"]), autofocus: true, class:"w-full rounded-lg bg-gray-50" %>
      </div>
    
      <div class="form-group mt-2">
        <%= f.label :date_of_birth %><br>
        <%= f.date_field :date_of_birth, class: "form-control", max: 18.years.ago.to_date %>
      </div>
    
      <%= f.hidden_field :devise_type, value: "Desktop" %>
      
      <div class="field mt-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class:"w-full rounded-lg bg-gray-50" %>
      </div>
    
      <div class="field mt-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"w-full rounded-lg bg-gray-50" %>
      </div>
      
      <div class="field mt-4">
      <%= f.submit "Sign up",class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>  
  </div>
  
<% end %>
</div>
  
  