<style>  
  body{
    background-color:black;
    height:100% ;
  }

  a{
    color:red;
  }  
  .container{
    margin:auto;
    position:absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding:25px;
    width: 35%;
    color: black;
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }

  .radio{
    margin: 0 10px 0 0;
  }
  
  .inp{  
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
  .lab{
    color:greenyellow;
    font-size:20px;
  }
  h3{
    margin-top:10px;
  }
  .forms button{
    margin: 10px 0;
  }
</style>

<div class="container">
  <h2>Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inp"%>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-success"  %>
    </div>
  <% end %>
  
  <%= render "admins/shared/links" %>
</div>
