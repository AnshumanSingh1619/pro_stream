<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: rgb(162, 143, 143);
  }
  a{
    color: blue;
  }  
  .conta{
    margin:auto;
    position:absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding:25px;
    width: 35%;
    color: black;
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }
  .inp{
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
</style>
<div class="alert">
  <%= render 'shared/alert' %>
  <%= render 'shared/notice' %>
</div>
<div class="conta">
  <%# otp_verification.html.erb %>
  <%= form_tag otp_verification_path, method: :post do %>
    <p>Please enter 6 digit OTP sent to super admin email:</p>
    <div class="field">
      <%= text_field_tag :otp %>
    </div>  
    <%= hidden_field_tag :admin_id, @admin.id %>
    <%= submit_tag "Verify OTP", class: "text-white mt-3 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  <% end %>
  <div class="field mt-2">
    <%= button_to "Resend OTP", resend_otp_path(admin_id: @admin.id), method: :post, class: "text-blue-700" %>
  </div>
</div>
