<%= stylesheet_link_tag "content" %>
<%= render 'shared/header' %>
<div class="container-fluid">
  <div class="col-lg-12">
    <div class="mr-10 ml-10 mt-2 mb-2">
      <div class="row">
        <% @my_lists.each do |my_list| %>
          <% content = Content.find_by(id: my_list.content_id) %>
          <% if content.poster.present? %>
            <div class="col-lg-4">
              <div class="mr-10 ml-10 mt-2 mb-2">
                <div class="card shadow mb-3 mt-2 content-img">
                  <div style="height: 250px; overflow: hidden;">
                    <% if content.seasons.present? %>
                      <% season = content.seasons.find_by(season_no: 1) %>
                      <%= link_to showseason_path(content.id, season.id) do %>
                        <img class="content-img" src="<%= content.poster.url %>" style="width: 100%; height: 100%;" />
                      <% end %> 
                    <% else %>
                      <%= link_to showcontent_path(content.id) do %>
                        <img class="content-img" src="<%= content.poster.url %>" style="width: 100%; height: 100%;" />
                      <% end %>  
                    <% end %> 
                  </div>
                  <div class="hover">
                    <h3 class="text-uppercase"><%= content.name %></h3>
                  </div>
                </div>
              </div>
            </div>  
          <% end %>
        <% end %>
      </div>
    </div>  
  </div>
</div>  

