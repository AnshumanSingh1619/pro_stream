<style>
  a{
    color:red;
  }  
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: rgb(162, 143, 143);
  }
  .conta{
    margin:auto;
    position:relative;
    top: 100% ;
    margin-top: 60px;
    padding:25px;
    width: 35%;
    color: black;
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }
  .inp{
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
  .lab{
    color:red;
    font-size:20px;
  }
</style>
<div class="conta mt-5">
  <h2 class="text-2xl">Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= alert "users/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"inp"%>
    </div>
    
    <div class="field">
      <%= f.label :firstname %><br />
      <%= f.text_field :firstname, autofocus: true, class:"inp" %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname, autofocus: true, class:"inp" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.select :gender, options_for_select(["Male", "Female", "Others"]), autofocus: true, class:"inp" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth %><br>
      <%= f.date_field :date_of_birth, class: "form-control", max: 18.years.ago.to_date %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" ,class:"inp"%>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"inp" %>
    </div>
  
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password",class:"inp" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Update" ,class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"%>
    </div>
  <% end %>

  <div>
    <%= button_to "Delete my account", user_registration_path, method: :delete , class:"text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800"%>
  </div>
  
  <%= link_to "Back", :back %>
</div>