<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-image: url("https://analyticsindiamag.com/wp-content/uploads/2019/05/apps.55787.9007199266246365.687a10a8-4c4a-4a47-8ec5-a95f70d8852d.jpg");
    background-size: cover;
  }
  .modal-buttonsin {
    position: absolute;
    top: 10px;
    right: 130px;
    z-index: 1000; 
  }
  .para{
    margin-top: 450px;
  }
  .modal-buttonsup {
    position: absolute;
    top: 10px;
    right: 20px;
    z-index: 1000; 
  }
  .title {
    position: absolute;
    top: 2px;
    left: 20px;
    z-index: 1000; 
  }
  .inp{
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
  .alert{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 0;
    width: 70%;
    text-align: center;
  }
  .signinmodal {
    display: none;
  }
  .signupmodal {
    display: none;
  }
  @media (max-width: 500px) {
    .modal-buttonsin {
      position: absolute;
      top: 120px;
      left: 20px;
      z-index: 1000;
      width: 120px; 
    }
    .modal-buttonsup {
      position: absolute;
      top: 70px;
      left: 20px;
      z-index: 1000; 
      width: 120px; 
    }
    .para {
      margin-top: 250px;
      font-size: 24px;
    }
  }
</style>
<div class="alert">
  <%= render 'shared/alert' %>
  <%= render 'shared/notice' %>
</div>
<div id="hidemodal">
<h2 class="text-5xl text-red-700 font-black title italic mt-4">ProStream</h2>
<button type="button" class="modal-buttonsin block text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-re-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" onclick="showsignin()">Sign_in</button>

<button type="button" class="modal-buttonsup block text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-re-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" onclick="showsignup()">Sign_up</button>
</div>

<p class="text-5xl text-white text-center para font-white font-extrabold">Unlimited movies, TV shows, and more.</p>

<div id="sign_in-modal" class="signinmodal overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="max-w-xl w-full mx-auto shadow-lg rounded-lg py-8">
    <div class="bg-gray-700">
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-600">
        <h3 class="text-xl font-semibold text-white">
            Log in
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center hover:bg-gray-600 hover:text-white" onclick="hidesignin()" data-modal-hide="sign_in-modal">
            <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div id="newuserForm">
        <%= render "new" %>
      </div>
    </div>
  </div>
</div>

<div id="sign_up-modal" class="signupmodal overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="max-w-xl w-full mx-auto shadow-lg rounded-lg py-8">
    <!-- Modal content -->
    <div class="relative rounded-lg shadow bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-600">
        <h3 class="text-xl font-semibold text-white">
          Sign up
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center hover:bg-gray-600 hover:text-white" onclick="hidesignup()" data-modal-hide="sign_up-modal">
          <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div id="newuserForm">
        <%= render "new_registration" %>
      </div>
    </div>
  </div>
</div>

<script>
  var SigninModal = document.getElementById("sign_in-modal");
  var SignupModal = document.getElementById("sign_up-modal");
  var HideModal = document.getElementById("hidemodal");
  
  function hidesignin() {
    SigninModal.style.display = "none";
    HideModal.style.display = "block";
  }  

  function hidesignup() {
    SignupModal.style.display = "none";
    HideModal.style.display = "block";
  }  
  
  function showsignin() {
    SigninModal.style.display = "block";
    HideModal.style.display = "none";
  } 
  function showsignup() {
    SignupModal.style.display = "block";
    HideModal.style.display = "none";
  } 
</script>
