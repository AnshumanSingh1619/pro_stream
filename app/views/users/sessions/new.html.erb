<style>
  a{
    color:red;
  }  
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: rgb(162, 143, 143);
  }
  .conta{
    margin:auto;
    position:absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding:25px;
    width: 35%;
    color: black;
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }
  .inp{
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
  
  .lab{
    color:red;
    font-size:20px;
}

</style>

<div class="conta">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,class:"lav"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"inp" %>
    <p>We'll never share your email with anyone else.</p>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"inp" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"%>
  </div>
<% end %>
<%= render "users/shared/links" %>
</div>