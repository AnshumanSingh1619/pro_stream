<style>  
  body {
    font-family: Arial, Helvetica, sans-serif;
    background-color: rgb(162, 143, 143);
  }
  a{
    color:red;
  }  
  .conta{
    margin:auto;
    position:absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding:25px;
    width: 35%;
    color: black;
    border-radius:25px;
    box-shadow: 0px 0px 8px 2px black;
  }
  .inp{  
    width: 100%;
    height: auto;
    margin:5px;
    font-size:20px;
  }
</style>
<div class="conta">
  <h2>Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, turbo: :false }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inp" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>
